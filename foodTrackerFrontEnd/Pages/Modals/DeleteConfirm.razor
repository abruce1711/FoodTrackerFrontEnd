@using foodTrackerFrontEnd.Interfaces;
<MudDialog>
    <DialogContent>
        <MudText>Are you sure you want to delete @ItemName</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton ButtonType=ButtonType.Submit Color="Color.Warning" OnClick="Submit">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string StorageId { get; set; }
    [Parameter] public string ItemName { get; set; }
    [Parameter] public IFoodItemService FoodService { get; set; }

    private async Task Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();
}
