@using foodTrackerFrontEnd.Interfaces;
@using foodTrackerFrontEnd.Models;
<MudDialog>
    <DialogContent>
        <MudText>Are you sure you want to delete @Item.Name</MudText>
        <MudText>Doing so will delete all of the items @Item.Name contains</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton ButtonType=ButtonType.Submit Color="Color.Warning" OnClick="Submit">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public FoodStorage Item { get; set; }
    [Parameter] public IFoodStorageService Service { get; set; }

    private async Task Submit()
    {
        Service.LocalList.Remove(Item);

        MudDialog.Close(DialogResult.Ok(true));

        await Service.Delete(Item.Id);
    }

    void Cancel() => MudDialog.Cancel();
}
